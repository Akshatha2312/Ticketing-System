<?php
// Cloud Database Configuration (Aiven MySQL)
// INSTRUCTIONS: Copy this file to db.php and fill in your actual credentials

$host = 'YOUR_DATABASE_HOST';  // e.g., mysql-xxxxx.aivencloud.com
$port = 11898;
$dbname = 'defaultdb';
$username = 'YOUR_USERNAME';   // e.g., avnadmin
$password = 'YOUR_PASSWORD';   // Get from your cloud provider

// Create connection with SSL
$conn = mysqli_init();
if (!$conn) {
    die("mysqli_init failed");
}

// Set SSL options (required for cloud database)
mysqli_ssl_set($conn, NULL, NULL, NULL, NULL, NULL);

// Connect to database
if (!mysqli_real_connect($conn, $host, $username, $password, $dbname, $port, NULL, MYSQLI_CLIENT_SSL)) {
    die("Database connection failed: " . mysqli_connect_error());
}

// Set charset to utf8mb4
mysqli_set_charset($conn, "utf8mb4");
?>
